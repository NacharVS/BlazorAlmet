
@if (IsShown)
{
    @if (UsersParam == null)
    {
        @ChildContent
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>E-Mail</th>
                    <th>Age</th>
                    <th>DriverRights</th>
                    <th>Vacancy</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in UsersParam)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Surname</td>
                        <td>@user.Email</td>
                        <td>@user.Age</td>
                        <td>@(user.IsDriver ? "Yes" : "NO")</td>
                        <td>@user.Vacancy</td>
                        <td><button class="btn btn-danger" @onclick="(()=> DeleteUser.InvokeAsync(user))">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    }

}
else
{
    <p><em>Hidden</em></p>
}
@code {
    [Parameter] public List<User> UsersParam { get; set; }
    [Parameter] public bool IsShown { get; set; }
    [Parameter] public EventCallback<User> DeleteUser { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    //[Parameter] public RenderFragment<TItem> Template{ get; set; }
}
